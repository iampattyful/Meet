{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2021",
        "lib": ["es2021", "dom"],
        "outDir":"./build",
        "rootDir": "./src",
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react",
        "esModuleInterop":true,
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    },
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "index.js"
    ]
}